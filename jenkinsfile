pipeline{
    agent any
    environment{
        NODE_ENV='development'
    }
    tools{
        nodejs'23.11.0'
    }
    stages{
        stage('checkout repository'){
            steps{
            git branch:'main',url:'https://github.com/manshachopra/tourfrontend.git'
            }
        }
        stage('install dependencies'){
            steps{
                bat'npm install'
            }
        }
        stage('Build for Production') {
            steps {
                // Prevents CI warnings from aborting build
                bat 'set CI=false && npm run build'
            }
        }

        stage('Serve Build in Background') {
            steps {
                // Run production server in background
                bat 'start /B serve -s build -l 3000 > serve-log.txt 2>&1'
            }
        }
    }
    post{
        success{
            echo'pipeline completed successfully'
        }
        failure{
            echo'something went wrong please check for errors'
        }
    }
}